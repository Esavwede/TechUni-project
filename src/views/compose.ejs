<%- include("partials/secondary_header"); -%>
    <h1 class="m-5 text-violet-800">Compose Job Post</h1>
    <form class="m-5" action="/job" method="post">
      <div class="form-group">
        <label>Title :</label>
        <input class="form-control my-3" type="text" name="title">
        <label>Role :</label>
        <input class="form-control my-3" type="text" name="role">
        <label>Location :</label>
        <input class="form-control my-3" type="text" name="location">
        <label>Salary :</label>
        <input class="form-control my-3" type="text" name="salary">
        <label>Qualification :</label>
        <input class="form-control my-3" type="text" name="qualification">
        <label>Experience :</label>
        <input class="form-control my-3" type="text" name="experience">
        <label>Responsibilities :</label>
         <textarea class="form-control my-2" name="responsibilities" rows="5" cols="30"></textarea>
        <label>Skills :</label>
        <input class="form-control my-3" type="text" name="skills">

        <label>Job Description :</label>
        <textarea class="form-control my-3" name="content" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-primary  mt-3 w-full" type="submit" name="button">Publish</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
